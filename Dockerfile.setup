# Python setup container for Keycloak configuration
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir requests

# Create app directory
WORKDIR /app

# Copy Python setup scripts
COPY keycloak/setup_keycloak.py /app/
COPY keycloak/boot_keycloak.py /app/
COPY run_keycloak.py /app/

# Copy setup entrypoint script
COPY setup-entrypoint.sh /app/setup-entrypoint.sh

# Make setup script executable
RUN chmod +x /app/setup-entrypoint.sh

# Set entrypoint
ENTRYPOINT ["/app/setup-entrypoint.sh"]